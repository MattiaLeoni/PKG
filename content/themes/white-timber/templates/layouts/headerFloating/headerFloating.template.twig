<header id="masthead" class="floating-header floating ">
    <div class="uk-container">
        <div class="floating__outer">
            <div class="floating__container">
                <div class="floating__top uk-flex uk-flex-right uk-flex-middle">
                    <div class="floating__top__social">
                        {% include 'common/social-list.twig' %}
                    </div>
                    {% if languages is not empty and options.language_position == 'top_header' %}
                        <div class="nav-languages uk-flex uk-flex-middle">
                            <ul class="uk-flex uk-flex-middle">
                                {{ languages }}
                            </ul>
                        </div>
                    {% endif %}

                </div>
                <div class="floating__bot">
                    <div class="floating__bot__content uk-flex uk-flex-middle uk-flex-between ">
                        <div class="floating__logo">
                            <a href="{{ trl('lang') }}/"><img class="floating__logo__desktop" src="{{options.logo.url}}" /></a>
                            <a href="{{ trl('lang') }}/"><img class="floating__logo__mobile" src="{% if options.logo_mobile.url is not empty %} {{options.logo_mobile.url}} {% else %} {{options.logo.url}} {% endif %}" /></a>
                        </div>
                        <div class="floating__bot__right">
                            <div class="uk-flex uk-flex-middle uk-height-1-1">
                                <nav id="nav-main" class="nav-main uk-flex uk-flex-middle" role="navigation">
                                    {% include 'layouts/header/parts/navMenu.template.twig' %}

                                    {% if options.search_position == 'main_header' %}
                                        <div class="search-btn-header uk-flex uk-flex-middle">
                                            <input id='search-btn' type='checkbox' value="" >
                                            <label for='search-btn' id="search-icon-label" uk-toggle="target: #search-bar; animation: uk-animation-fade;"></label>
                                        </div>
                                    {% endif %}
                                    {% if languages is not empty and options.language_position == 'main_header'  %}
                                        <div class="nav-languages">
                                            <ul class="uk-flex">
                                                {{ languages }}
                                            </ul>
                                        </div>
                                    {% endif %}
                                </nav>
                                <!-- #hamburger -->
                                <div class="floating__hamburger {% if options.hamburger_always_on != true %} mobile-only {% endif %}">
                                    <button id="header-hamburger" class="hamburger hamburger--squeeze uk-flex uk-flex-middle uk-padding-remove" {#uk-toggle="target: #canvas-header"#} type="button">
                                        {# <span class="hamburger-text uk-margin-small-right" open-text="{{ trl('Menu') }}" close-text="{{ trl('Chiudi') }}" >{{ trl('Menu') }}</span> #}
                                        <span class="hamburger-box">
                                            <span class="hamburger-inner"></span>
                                        </span>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="search-bar" id="search-bar" hidden>
                    {{ fn('get_search_form') }}
                </div>

            </div> 

        </div>
    </div>
    <div class="floating__fixed" displaynone>
        <div class="uk-container">
            <div class="floating__fixed__content ">
                <div class="floating__fixed__content__int uk-flex uk-flex-middle uk-flex-between">
                    <div class="floating__logo">
                        <a href="{{ trl('lang') }}/"><img class="floating__logo__desktop" src="{{options.logo.url}}" /></a>
                        <a href="{{ trl('lang') }}/"><img class="floating__logo__mobile" src="{% if options.logo_mobile.url is not empty %} {{options.logo_mobile.url}} {% else %} {{options.logo.url}} {% endif %}" /></a>
                    </div>

                    <nav id="nav-main" class="nav-main uk-flex uk-flex-middle" role="navigation">
                        {% include 'layouts/header/parts/navMenu.template.twig' %}

                        {% if options.search_position == 'main_header' %}
                            <div class="search-btn-header uk-flex uk-flex-middle">
                                <input id='search-btn' type='checkbox' value="" >
                                <label for='search-btn' id="search-icon-label" uk-toggle="target: #search-bar; animation: uk-animation-fade;"></label>
                            </div>
                        {% endif %}
                    </nav>
                </div>

            </div>
        </div>
    </div>
</header> 

{% include 'layouts/header/parts/modalMenu.template.twig' %}
