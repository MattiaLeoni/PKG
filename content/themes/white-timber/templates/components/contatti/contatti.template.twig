<div class="contatti">
    <div class="grid lg:grid-cols-2 gap-8">
        <div class="border-r border-slate-200 pr-8">
            <div class="text-3xl lg:text-4xl font-titles font-semibold ">
                Compila il form e verrai <span class="text-effect">ricontattato</span> al pi√π presto
            </div>
            <div class="text-2xl mt-8">
                {{options.company_name}}
            </div>
            <div class="text-lg mt-4">
                <strong>{{ trl('Email') }}:</strong> <a href="mailto:{{options.email}}">{{options.email}}</a>
            </div>
            {% if options.phone %}
            <div class="text-lg mt-2">
                <strong>{{ trl('Telefono') }}:</strong> <a href="tel:{{options.phone}}">{{options.phone}}</a>
            </div>
            {% endif %}
            
            {% if options.address %}
                <div class="text-lg mt-2">
                    <strong>{{trl('Sede operativa')}}:</strong> 
                    <div>
                        {{options.address}}
                    </div>
                </div>            
            {% endif %}
            
            <div class="mt-8">
                {% include 'common/social-list.twig' %}
            </div>
        </div>
        <div class="">
            {{ function('do_shortcode', '[ninja_form id="'~ component.form_id ~'"]') }}
        </div>
    </div>
</div>