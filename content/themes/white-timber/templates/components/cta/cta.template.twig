<div class="uk-grid-medium cta uk-flex uk-flex-middle" uk-grid>
    <div class="uk-width-2-3@m">
        <div class="">
            <div class="cta__title">{{cta_title}}</div>
            {% if cta_text %}<div class="cta__text {% if cta_title %}uk-margin-small-top{% endif %}">{{cta_text}}</div>{% endif %}
        </div>
    </div>
    <div class="uk-width-1-3@m">
        <div class="cta__link uk-flex uk-flex-right">
            {% set button_title = cta_link_text %}
            {% set button_link = cta_link %}
            {% set button_style = cta_link_style %}
            {% include 'components/simpleButton/simpleButton.template.twig' %}
        </div>
    </div>
</div> 